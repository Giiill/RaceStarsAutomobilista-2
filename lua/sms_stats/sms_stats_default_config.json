// Версия конфигурации
version : 2

// Значения по умолчанию
config : {

    // Ограничение длины истории. Самые старые сессии будут удалены из истории.
    // Используйте 0, чтобы полностью отключить отслеживание истории сессий.
    // Используйте отрицательное число для неограниченной истории.
    "history_length" : 50,

    // Следует ли отслеживать события участников в истории?
    // Если включено, будут отслеживаться следующие типы событий участников по этапам:
    // Круг, Состояние, Влияние, Начало нарушения трассы, Окончание нарушения трассы
    "track_events" : false,

    // Следует ли отслеживать результаты сессии?
    // Если включено, будут отслеживаться события участников с результатами по этапам.
    "track_results" : true,
}