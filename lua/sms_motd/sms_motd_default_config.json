// Версия конфигурации
version : 1

// Значения по умолчанию
config : {

    // Сообщение, которое будет отправлено каждому новому участнику сессии. Если оно пустое, будет использовано: "Добро пожаловать на 'SERVER_NAME'".
    "motd" : "Добро пожаловать на RaceStars",

    // Массив полей настройки, которые будут отправлены, если необходимо вывести больше, чем сообщение приветствия. Разрешенные поля:
    // - "controls" — что контролируется сервером (настройка, трасса, автомобиль, класс)
    // Если сервер не управляет настройкой, ничего другого выводиться не будет. Если управляет:
    // - "format" — формат гонки (тренировка/квалификация и т.д.)
    // - "restrictions" — различные ограничения (несколько строк)
    // - "weather" — погодные переходы и скорость
    // - "date" — дата/время начала и скорость
    "send_setup" : [
        "controls",
        "format",
        // "restrictions", // комментарий, так как это слишком много спама, отключено по умолчанию, раскомментируйте для получения этих данных в сообщении
        "weather",
        "date"
    ],

    // Отправлять эти сообщения всем также после возвращения в лобби?
    "send_when_returning_to_lobby" : true,
}